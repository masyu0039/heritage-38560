<div class="contents row">
<h2> 投稿一覧 </h2>
  <% @heritages.each do |heritage| %>
     <%= render partial: "heritage", locals: { heritage: heritage } %>
  <% end %>
  </div>
</div>
<%= link_to(new_heritage_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag '富士山の無料アイコン.png' , size: '185x50' ,class: "purchase-btn-icon" %>

<% end %>
